INCLUDE_PATH = $(INCS) -I../src
LIBRARY_PATH = -L.. $(LIBS)
LIBRARY_FLAG = -lflint -larb -lccluster -lm

QUIET_CC  = @echo '   ' CC  ' ' $@;

TEST=$(foreach x, ., $(wildcard $(x)/*.c))
TEST_OBJS=$(TEST:%.c=%.o)
TEST_EXECS=$(TEST:%.c=%)

build: ccluster\
       risolate\
       cauchy\
       genPolFile\
       genRandPolFile\
       ccluster_spiral\
       ccluster_nested\
       cauchy_mandelbrot

# TESTING VARIABLES
degree=64
bitsize=14
poly=Mignotte
file=${poly}_${degree}_${bitsize}.ccl

test: build
	./genPolFile ${poly} ${degree} ${file} -b ${bitsize} 
	./ccluster ${file}

#==================================================
# HOUSEKEEPING 
#==================================================

clean :
	rm -rf $(TEST_OBJS) $(TEST_EXECS)
	cd ISSAC20 && make clean && cd ..

.c.o :
# 	@echo "Building $@"
	$(QUIET_CC) $(CC) $(CFLAGS) -o $@ -c $< $(INCLUDE_PATH)
	
ccluster: ccluster.o parseArgs.h
# 	@echo "Building $@"
	$(QUIET_CC) $(CC) $(CFLAGS) \
	    	-o $@ $< $(INCLUDE_PATH) \
	    	$(LIBRARY_PATH) $(LIBRARY_FLAG) \

